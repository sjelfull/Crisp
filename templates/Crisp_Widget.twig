{% if trackingCode %}
    {{ trackingCode | raw }}

    {% if currentUser %}
        <script>
            $crisp.push(["set", "user:email", "{{ currentUser.email }}"]);
            $crisp.push(["set", "user:nickname", "{{ currentUser.getFullName() }}"]);
        </script>
    {% endif %}
{% endif %}